<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp">


    <ImageView
        android:id="@+id/iv_mine_vqu_item_coupon_bg_left"
        android:layout_width="89dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@android:color/black" />

    <TextView
        android:id="@+id/tv_mine_vqu_item_coupon_dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:textColor="@color/color_FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_mine_vqu_item_coupon_bg_left"
        app:layout_constraintLeft_toLeftOf="@id/iv_mine_vqu_item_coupon_bg_left"
        app:layout_constraintTop_toTopOf="@id/iv_mine_vqu_item_coupon_bg_left"
        tools:text="9折" />


    <ImageView
        android:id="@+id/iv_mine_vqu_item_coupon_bg_right"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_mine_vqu_item_coupon_bg_left"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        tools:src="@android:color/black" />

    <TextView
        android:id="@+id/tv_mine_vqu_item_coupon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:includeFontPadding="false"
        android:textColor="@color/color_FFFFFF"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_mine_vqu_item_coupon_bg_right"
        app:layout_constraintTop_toTopOf="@id/iv_mine_vqu_item_coupon_bg_right"
        tools:text="1v1视频约会券" />

    <TextView
        android:id="@+id/tv_mine_vqu_item_coupon_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"
        android:textColor="@color/color_FFFFFF"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_mine_vqu_item_coupon_bg_right"
        app:layout_constraintTop_toBottomOf="@id/tv_mine_vqu_item_coupon_title"
        tools:text="和女神视频通话，享受8享受8.5折优惠" />

    <TextView
        android:id="@+id/tv_mine_vqu_item_coupon_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textColor="@color/color_FFFFFF"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_mine_vqu_item_coupon_bg_right"
        app:layout_constraintLeft_toLeftOf="@id/iv_mine_vqu_item_coupon_bg_right"
        tools:text="2021.01.30-2022.01.29到期" />


</androidx.constraintlayout.widget.ConstraintLayout>