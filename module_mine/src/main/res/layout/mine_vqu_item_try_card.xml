<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp">

    <ImageView
        android:id="@+id/iv_mine_vqu_item_try_card_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        tools:src="@android:color/black" />

    <ImageView
        android:id="@+id/iv_mine_vqu_item_try_card_img"
        android:layout_width="119dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/tv_mine_vqu_item_try_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:includeFontPadding="false"
        android:textColor="@color/color_FFFFFF"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/iv_mine_vqu_item_try_card_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1v1视频约会券" />

    <TextView
        android:id="@+id/tv_mine_vqu_item_try_card_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"
        android:textColor="@color/color_FFFFFF"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@id/iv_mine_vqu_item_try_card_img"
        app:layout_constraintTop_toBottomOf="@id/tv_mine_vqu_item_try_card_title"
        tools:text="和女神视频通话，享受8享受8.5折优惠" />

    <TextView
        android:id="@+id/tv_mine_vqu_item_try_card_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textColor="@color/color_FFFFFF"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_mine_vqu_item_try_card_img"
        tools:text="2021.01.30-2022.01.29到期" />
</androidx.constraintlayout.widget.ConstraintLayout>