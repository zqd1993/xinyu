<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">


    <ImageView
        android:id="@+id/iv_mine_dialog_sign_day_bg_light"
        android:layout_width="368dp"
        android:layout_height="296dp"
        android:layout_marginTop="-76.5dp"
        android:clickable="true"
        android:src="@mipmap/bg_sign_day_star"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cl_tanta_sign_day_success_parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_tanta_sign_day_success_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.mshy.VInterestSpeed.common.ui.view.ShapeConstraintLayout
            android:id="@+id/cl_mine_dialog_sign_day_parent"
            android:layout_width="300dp"
            android:layout_height="242.5dp"
            android:layout_marginTop="81dp"
            android:clickable="true"
            android:clipChildren="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_mine_dialog_sign_day_success_title"
            app:scl_layoutRadius="20dp"
            app:scl_solidColor="@color/color_FFFFFF">


            <TextView
                android:id="@+id/stv_mine_dialog_sign_day_sign_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="已连续签到3天奖励"
                android:textColor="@color/color_999999"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_tanta_sign_day_award" />


<!--            <ImageView-->
<!--                android:id="@+id/iv_mine_dialog_sign_day_success_icon"-->
<!--                android:layout_width="99.5dp"-->
<!--                android:layout_height="85dp"-->
<!--                android:visibility="gone"-->
<!--                android:layout_marginTop="129.5dp"-->
<!--                app:layout_constraintLeft_toLeftOf="parent"-->
<!--                app:layout_constraintRight_toRightOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent" />-->

            <LinearLayout
                android:id="@+id/ll_tanta_sign_day_award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                    android:id="@+id/tv_mine_dialog_sign_day_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/color_FE8A34"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                    android:id="@+id/tv_mine_dialog_sign_day_award"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color_FE8A34"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    tools:text="120" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金币"
                    android:textColor="@color/color_222222"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                android:id="@+id/stv_mine_dialog_sign_day_submit"
                android:layout_width="240dp"
                android:layout_height="49dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="好的"
                android:textColor="@color/color_FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:stv_endColor="@color/color_FE8A34"
                app:stv_layoutRadius="12dp"
                app:stv_startColor="@color/color_FE8A34" />
        </com.mshy.VInterestSpeed.common.ui.view.ShapeConstraintLayout>

        <ImageView
            android:id="@+id/iv_mine_dialog_sign_day_success_title"
            android:layout_width="290.5dp"
            android:layout_height="111.5dp"
            android:clickable="true"
            android:src="@mipmap/ic_sign_day_success_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_mine_dialog_sign_day_close"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_dialog_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_tanta_sign_day_success_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>