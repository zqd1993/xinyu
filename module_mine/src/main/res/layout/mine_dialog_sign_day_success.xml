<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">


    <ImageView
        android:id="@+id/iv_mine_dialog_sign_day_bg_light"
        android:layout_width="368dp"
        android:layout_height="296dp"
        android:layout_marginTop="-76.5dp"
        android:clickable="true"
        android:src="@mipmap/bg_sign_day_star"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cl_tanta_sign_day_success_parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_tanta_sign_day_success_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout
            android:id="@+id/cl_mine_dialog_sign_day_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:clipChildren="false"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_mine_dialog_sign_day_success_title"
            app:sll_solidColor="@color/color_FFFFFF"
            app:sll_bottomLeftRadius="19dp"
            app:sll_bottomRightRadius="19dp">

            <!--            <ImageView-->
            <!--                android:id="@+id/iv_mine_dialog_sign_day_success_icon"-->
            <!--                android:layout_width="99.5dp"-->
            <!--                android:layout_height="85dp"-->
            <!--                android:visibility="gone"-->
            <!--                android:layout_marginTop="129.5dp"-->
            <!--                app:layout_constraintLeft_toLeftOf="parent"-->
            <!--                app:layout_constraintRight_toRightOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="parent" />-->

            <LinearLayout
                android:id="@+id/ll_tanta_sign_day_award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                    android:id="@+id/tv_mine_dialog_sign_day_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/color_FF8859"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                    android:id="@+id/tv_mine_dialog_sign_day_award"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color_FF8859"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    tools:text="120" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金币"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/color_textMain"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/stv_mine_dialog_sign_day_sign_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="已连续签到3天奖励"
                android:textColor="@color/color_999999"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_tanta_sign_day_award" />

            <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                android:id="@+id/stv_mine_dialog_sign_day_submit"
                android:layout_width="240dp"
                android:layout_height="49dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="19dp"
                android:gravity="center"
                android:text="好的"
                android:textColor="@color/color_FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:stv_startColor="@color/color_FF7459"
                app:stv_endColor="@color/color_FFB058"
                app:stv_layoutRadius="15dp" />
        </com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout>

        <ImageView
            android:id="@+id/iv_mine_dialog_sign_day_success_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@mipmap/ic_sign_day_success_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_mine_dialog_sign_day_close"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_dialog_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_tanta_sign_day_success_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>