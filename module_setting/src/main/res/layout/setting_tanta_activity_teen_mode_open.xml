<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:ignore="MissingDefaultResource,ResourceName">

    <include
        android:id="@+id/includeTitle"
        layout="@layout/include_toolbar" />
    <TextView
        android:id="@+id/tv_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="33dp"
        android:text="@string/setting_setpwd"
        android:textColor="@color/color_textMain"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includeTitle" />

    <com.mshy.VInterestSpeed.common.ui.view.editor.CaptchaInputView
        android:id="@+id/civ_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="41dp"
        android:layout_marginRight="23dp"
        android:background="@null"
        android:inputType="number"
        android:maxLength="4"
        app:civ_captchaBorderColor="@color/color_F5F5F5"
        app:civ_captchaBorderHeight="56dp"
        app:civ_captchaBorderRadius="12dp"
        app:civ_captchaColor="@color/color_textMain"
        app:civ_captchaTextSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pwd" />

    <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
        android:id="@+id/tv_bind"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="@string/setting_teen_mode_open"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:stv_layoutRadius="8dp"
        app:stv_startColor="@color/color_6BBFFD"
        app:stv_endColor="@color/color_4CB6FF"/>

</androidx.constraintlayout.widget.ConstraintLayout>