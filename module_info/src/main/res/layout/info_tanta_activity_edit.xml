<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:ignore="MissingDefaultResource,ResourceName">

    <include
        android:id="@+id/includeTitle"
        layout="@layout/include_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includeTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/info_perfect_ratio"
                    android:textColor="@color/color_222222"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_hint_pb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_tanta_info_tip"
                    android:paddingStart="10dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="9dp"
                    android:paddingBottom="6dp"
                    android:text=""
                    android:textColor="@color/color_934800"
                    android:textSize="9dp"
                    android:visibility="gone" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressbar"
                style="@style/MyProgressBar"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="16dp"
                android:max="14"
                android:progress="20" />

            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="0%"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_head"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="29dp">

                <TextView
                    android:id="@+id/tv_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_head"
                    android:textColor="@color/color_222222"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                    android:id="@+id/tv_state"
                    android:layout_width="42dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:text="审核中"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_head"
                    app:layout_constraintLeft_toRightOf="@+id/tv_head"
                    app:layout_constraintTop_toTopOf="@+id/tv_head"
                    app:stv_layoutRadius="18dp"
                    app:stv_solidColor="@color/color_A3AABE" />

                <TextView
                    android:id="@+id/tv_hint_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_tanta_info_tip"
                    android:paddingStart="10dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="9dp"
                    android:paddingBottom="6dp"
                    android:text=""
                    android:textColor="@color/color_934800"
                    android:textSize="9dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tv_head"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.mshy.VInterestSpeed.common.ui.view.CommonVquAvatarFrameView
                    android:id="@+id/iv_head"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="13dp"
                    app:avatarSize="36dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv1"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_tanta_arrow_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View style="@style/line_f5f4f7" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_name"
                android:layout_width="match_parent"
                android:layout_height="54dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_nickname"
                    android:textColor="@color/color_222222"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text=""
                    android:textColor="@color/color_273145"
                    android:textColorHint="@color/color_999999"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv2"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_tanta_arrow_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View style="@style/line_f5f4f7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_photo"
                    android:textColor="@color/color_222222"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_hint_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_tanta_info_tip"
                    android:paddingStart="10dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="9dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/color_934800"
                    android:textSize="9dp"
                    android:visibility="gone" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"
                tools:itemCount="6"
                tools:listitem="@layout/info_tanta_edit_item_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:text="@string/info_photo_tip1"
                android:textColor="@color/color_999999"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:text="@string/info_photo_tip2"
                android:textColor="@color/color_999999"
                android:textSize="11sp" />

            <View
                style="@style/line_f5f4f7"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_video"
                    android:textColor="@color/color_273145"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/info_video_tip"
                    android:textColor="@color/color_999999"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_hint_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_tanta_info_tip"
                    android:paddingStart="10dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="9dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/color_934800"
                    android:textSize="9dp"
                    android:visibility="gone" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_video"
                android:layout_width="111dp"
                android:layout_height="111dp"
                android:background="@mipmap/ic_upload_add"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_tanta_video_play_2"
                    android:visibility="gone" />

                <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                    android:id="@+id/tv_state_video"
                    android:layout_width="42dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:text="审核中"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="gone"
                    app:stv_layoutRadius="4dp"
                    app:stv_solidColor="@color/_80000000" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:text="@string/info_video_tip1"
                android:textColor="@color/color_999999"
                android:textSize="11sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="20dp"
                android:text="@string/info_video_tip2"
                android:textColor="@color/color_999999"
                android:textSize="11sp"
                android:visibility="gone" />

            <View
                style="@style/line_f5f4f7"
                android:layout_marginTop="15dp"
                android:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_voice"
                android:layout_width="match_parent"
                android:layout_height="54dp">

                <TextView
                    android:id="@+id/tv_voice_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_voice"
                    android:textColor="@color/color_222222"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                    android:id="@+id/tv_state_voice"
                    android:layout_width="42dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="9dp"
                    android:gravity="center"
                    android:text="审核中"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_voice_left"
                    app:layout_constraintLeft_toRightOf="@+id/tv_voice_left"
                    app:layout_constraintTop_toTopOf="@+id/tv_voice_left"
                    app:stv_layoutRadius="4dp"
                    app:stv_solidColor="@color/_80000000" />

                <com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout
                    android:id="@+id/ll_voice"
                    android:layout_width="98dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="6.5dp"
                    android:visibility="gone"
                    android:paddingRight="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_record"
                    app:layout_constraintTop_toTopOf="parent"
                    app:sll_layoutRadius="40dp"
                    app:sll_solidColor="@color/color_5FBCFE">

                    <ImageView
                        android:id="@+id/iv_play_voice"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_tanta_info_stop" />

                    <ImageView
                        android:id="@+id/iv_wave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:src="@mipmap/ic_info_wave"
                        android:visibility="gone" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lv_wave"
                        android:layout_width="28dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="7dp"
                        app:lottie_autoPlay="false"
                        app:lottie_fileName="info_voice.json"
                        app:lottie_loop="true" />

                    <TextView
                        android:id="@+id/tv_voice_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="15”"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout>

                <TextView
                    android:id="@+id/tv_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:hint="@string/info_recording"
                    android:textColor="@color/color_273145"
                    android:textColorHint="@color/color_999999"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv3"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_tanta_arrow_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View style="@style/line_f5f4f7" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_age"
                android:layout_width="match_parent"
                android:layout_height="54dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_birthday"
                    android:textColor="@color/color_222222"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:gravity="end"
                    android:hint="@string/info_perfect"
                    android:textColor="@color/color_273145"
                    android:textColorHint="@color/color_999999"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv4"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_tanta_arrow_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View style="@style/line_f5f4f7" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_city"
                android:layout_width="match_parent"
                android:layout_height="54dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家乡"
                    android:textColor="@color/color_222222"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:gravity="end"
                    android:hint="@string/info_perfect"
                    android:textColor="@color/color_273145"
                    android:textColorHint="@color/color_999999"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv5"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_tanta_arrow_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View style="@style/line_f5f4f7" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_location"
                android:layout_width="match_parent"
                android:layout_height="54dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在地"
                    android:textColor="@color/color_273145"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:gravity="end"
                    android:hint="未知"
                    android:textColor="@color/color_273145"
                    android:textColorHint="#A3AABE"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv15"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/iv15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:src="@mipmap/ic_tanta_arrow_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View style="@style/line_f5f4f7" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_height"
                android:layout_width="match_parent"
                android:layout_height="54dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_height"
                    android:textColor="@color/color_222222"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:gravity="end"
                    android:hint="@string/info_perfect"
                    android:textColor="@color/color_273145"
                    android:textColorHint="@color/color_999999"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv6"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/iv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_tanta_arrow_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View style="@style/line_f5f4f7" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_weight"
                android:layout_width="match_parent"
                android:layout_height="54dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_weight"
                    android:textColor="@color/color_222222"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:gravity="end"
                    android:hint="@string/info_perfect"
                    android:textColor="@color/color_273145"
                    android:textColorHint="@color/color_999999"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv13"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/iv13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_tanta_arrow_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View style="@style/line_f5f4f7" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_job"
                android:layout_width="match_parent"
                android:layout_height="54dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_professional"
                    android:textColor="@color/color_222222"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:gravity="end"
                    android:hint="@string/info_perfect"
                    android:textColor="@color/color_273145"
                    android:textColorHint="@color/color_999999"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv7"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/iv7"
                    android:layout_width="wrap_content"
