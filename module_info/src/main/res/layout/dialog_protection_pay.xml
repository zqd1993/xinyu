<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/protection_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/resources_vqu_protection_dialog_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/protection_top_sl"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/protection_top_sl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/protection_content_sll">

            <ImageView
                android:id="@+id/protection_top_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/resources_vqu_protection_dialog_top_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/protection_head_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:id="@+id/rl_right"
                    android:layout_width="61dp"
                    android:layout_height="61dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_toRightOf="@+id/rl_left"
                    android:background="@mipmap/bg_circle_right">

                    <ImageView
                        android:id="@+id/iv_right"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_left"
                    android:layout_width="61dp"
                    android:layout_height="61dp"
                    android:background="@mipmap/bg_circle_left">

                    <ImageView
                        android:id="@+id/iv_left"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/protection_level_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/resources_vqu_protection_no_level"
                app:layout_constraintBottom_toBottomOf="@+id/protection_head_rl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout
                android:id="@+id/protection_remind_tv"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/protection_level_im"
                app:sll_layoutRadius="7dp"
                app:sll_solidColor="@color/color_FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="38dp"
                    android:paddingEnd="31dp"
                    android:text="开启守护，默默的陪伴着ta"
                    android:textColor="#F54A72"
                    android:textSize="12sp" />

            </com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout
            android:id="@+id/protection_content_sll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:sll_solidColor="@color/color_FFFFFF"
            app:sll_topLeftRadius="20dp"
            app:sll_topRightRadius="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout
                    android:layout_width="5dp"
                    android:layout_height="16dp"
                    app:sll_layoutRadius="3dp"
                    app:sll_solidColor="#FF8859" />

                <TextView
                    android:id="@+id/tv_protection_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="1dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="当前守护天数为7天，守护后，自动累计天数" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/protection_option_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"
                tools:listitem="@layout/adapter_protection_pay_item" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="请选择支付方式："
                android:textColor="@color/color_999999"
                android:textSize="11sp" />

            <com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout
                android:id="@+id/ll_tanta_wechat_pay"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                app:sll_layoutRadius="12dp"
                android:visibility="gone"
                app:sll_solidColor="@color/color_F5F5F5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/ic_common_vqu_pay_dialog_wechat_logo"
                    android:drawablePadding="7dp"
                    android:gravity="center_vertical"
                    android:text="@string/common_vqu_wechat_pay"
                    android:textColor="@color/color_textMain"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/cb_tanta_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/vqu_selector_tick"
                    android:checked="true"
                    android:clickable="false"
                    android:enabled="false" />

            </com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_wechat_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_8"
                android:visibility="gone" />

            <com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout
                android:id="@+id/ll_tanta_alipay_pay"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                app:sll_layoutRadius="12dp"
                android:visibility="gone"
                app:sll_solidColor="@color/color_F5F5F5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@mipmap/ic_common_vqu_pay_dialog_alipay_logo"
                    android:drawablePadding="7dp"
                    android:gravity="center_vertical"
                    android:text="@string/common_vqu_alipay_pay"
                    android:textColor="@color/color_textMain"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/cb_tanta_alipay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/vqu_selector_tick"
                    android:clickable="false"
                    android:enabled="false" />

            </com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ali_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_8" />

            <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                android:id="@+id/protection_pay_stv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="27dp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="守护TA"
                android:textColor="@color/color_FFFFFF"
                android:textStyle="bold"
                app:stv_layoutRadius="24dp"
                app:stv_solidColor="@color/color_B4A3FD" />

            <TextView
                android:id="@+id/what_protection_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="9dp"
                android:text="什么是守护？"
                android:textColor="@color/color_999999"
                android:textSize="10sp" />

        </com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>