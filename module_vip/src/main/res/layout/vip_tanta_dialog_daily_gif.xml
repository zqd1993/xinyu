<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/green_4DC0A4"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sll_center_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout
            android:id="@+id/sll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingBottom="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:sll_endColor="#FFECCC"
            app:sll_layoutRadius="19dp"
            app:sll_startColor="@color/color_FFFFFF">

            <ImageView
                android:id="@+id/iv_mine_dialog_daily_res"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:layout_below="@+id/sll_center_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="39dp"
                tools:src="@mipmap/ic_dialog_close" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:textColor="@color/color_934800"
                android:textSize="14sp"
                tools:text="鼓掌翻天 X3" />

            <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                android:id="@+id/bt_receive"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="23dp"
                android:gravity="center"
                android:text="立即领取"
                android:textColor="@color/color_FFEEDA"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_pay_way"
                app:stv_endColor="@color/color_272727"
                app:stv_layoutRadius="8dp"
                app:stv_startColor="@color/color_505050" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="礼物领取后在【礼物】-【背包】中查看"
                android:textColor="@color/color_934800"
                android:textSize="12sp" />
        </com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_mine_dialog_daily_ttile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sll_center_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_daily_gif_top_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-2dp"
                android:text="会员每日礼物"
                android:textStyle="bold"
                android:textSize="17sp" />

        </FrameLayout>

        <ImageView
            android:id="@+id/iv_mine_dialog_daily_close"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:src="@mipmap/ic_dialog_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sll_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>