<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">




    <androidx.core.widget.NestedScrollView
        android:id="@+id/rv_vip_vqu_center_menus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_FFFFFF">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="80dp"
                android:src="@mipmap/vip_vqu_crown_yellow_big" />

            <TextView
                android:layout_width="wrap_content"
                android:text="开通成功"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/color_222222"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="续费VIP会员成功！"
                android:textColor="@color/color_999999"
                android:textSize="17sp" />

            <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                android:id="@+id/bt_jump"
                android:layout_width="280dp"
                android:layout_height="49dp"
                android:layout_marginTop="150dp"
                android:gravity="center"
                android:text="开启真爱之旅"
                android:textColor="@color/color_652906"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_pay_way"
                app:stv_endColor="@color/color_EEB090"
                app:stv_layoutRadius="12dp"
                app:stv_startColor="@color/color_FADCC0" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/tb_vip_vqu_succeed_bar"
        layout="@layout/include_toolbar" />
</androidx.constraintlayout.widget.ConstraintLayout>