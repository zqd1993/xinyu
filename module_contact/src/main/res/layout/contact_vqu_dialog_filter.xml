<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/color_blue_7C69FE_10">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:orientation="vertical">

        <com.mshy.VInterestSpeed.common.ui.view.ShapeConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            app:scl_layoutRadius="19dp"
            app:scl_solidColor="@color/white">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:text="筛选"
                android:textColor="@color/color_black_273145"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--性别选择-->
            <TextView
                android:id="@+id/label_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="39dp"
                android:gravity="center"
                android:text="性别："
                android:textColor="@color/color_273145"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <TextView
                android:id="@+id/tv_sex_all"
                android:layout_width="57dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_blue_stroke_7c69fe"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/color_textMain"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/label_sex"
                app:layout_constraintStart_toEndOf="@+id/label_sex"
                app:layout_constraintTop_toTopOf="@+id/label_sex"

                />

            <TextView
                android:id="@+id/tv_sex_man"
                android:layout_width="57dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_gray_stroke_d3d1d7"
                android:gravity="center"
                android:text="男"
                android:textColor="@color/color_273145"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/label_sex"
                app:layout_constraintStart_toEndOf="@+id/tv_sex_all"
                app:layout_constraintTop_toTopOf="@+id/label_sex" />

            <TextView
                android:id="@+id/tv_sex_woman"
                android:layout_width="57dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_gray_stroke_d3d1d7"
                android:gravity="center"
                android:text="女"
                android:textColor="@color/color_273145"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/label_sex"
                app:layout_constraintStart_toEndOf="@+id/tv_sex_man"
                app:layout_constraintTop_toTopOf="@+id/label_sex" />


            <!--性别选择-->
            <TextView
                android:id="@+id/label_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="33dp"
                android:gravity="center"
                android:text="排序："
                android:textColor="@color/color_273145"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_sex" />

            <TextView
                android:id="@+id/tv_sort_value"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_blue_stroke_7c69fe"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="按收益排序"
                android:textColor="@color/color_textMain"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/label_sort"
                app:layout_constraintStart_toEndOf="@+id/label_sort"
                app:layout_constraintTop_toTopOf="@+id/label_sort"

                />

            <TextView
                android:id="@+id/tv_sort_register"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_gray_stroke_d3d1d7"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="按注册时间排序"
                android:textColor="@color/color_273145"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/label_sort"
                app:layout_constraintStart_toEndOf="@+id/tv_sort_value"
                app:layout_constraintTop_toTopOf="@+id/label_sort" />

            <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                android:id="@+id/stv_confirm"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="31dp"
                android:layout_marginRight="23dp"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_sort"
                app:stv_startColor="@color/color_FF7459"
                app:stv_endColor="@color/color_FFB058"
                app:stv_layoutRadius="15dp" />

        </com.mshy.VInterestSpeed.common.ui.view.ShapeConstraintLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:padding="12dp"
            android:src="@mipmap/resources_vqu_message_exposure_close" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>