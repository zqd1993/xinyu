<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/color_blue_7C69FE_10">

    <com.mshy.VInterestSpeed.common.ui.view.ShapeConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="15dp"
        android:paddingEnd="12dp"
        android:paddingBottom="20dp"
        app:scl_layoutRadius="10dp"
        app:scl_solidColor="@color/white">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/logo_tanta_round" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/iv_avatar"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_273145"
                android:textSize="16sp"
                tools:text="缪贵林" />

            <TextView
                android:id="@+id/tv_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableRight="@mipmap/ic_vqu_info_copy"
                android:drawablePadding="3dp"
                android:textColor="@color/color_gray_8B96B5"
                android:textSize="12sp"
                tools:text="ID: 2256668" />

            <TextView
                android:id="@+id/tv_sign_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/color_gray_8B96B5"
                android:textSize="12sp"
                tools:text="注册时间: 2021-11-22 12:12:12" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llc_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="12dp"
                android:text="0"
                android:textColor="@color/color_FF7AC2"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@+id/iv_next"
                app:layout_constraintTop_toBottomOf="@id/label_value"
                tools:text="128.12" />

            <TextView
                android:id="@+id/label_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="累计收益"
                android:textColor="@color/color_black_273145"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/iv_next"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_next"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:src="@mipmap/resources_tanta_message_ic_next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.mshy.VInterestSpeed.common.ui.view.ShapeConstraintLayout>


</androidx.appcompat.widget.LinearLayoutCompat>