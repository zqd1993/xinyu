<?xml version="1.0" encoding="utf-8"?>
<com.mshy.VInterestSpeed.common.ui.view.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:scl_solidColor="@color/color_F5F5F5"
    app:scl_layoutRadius="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/iv_contact_vqu_item_invited_record_list_avatar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_contact_vqu_item_invited_record_list_avatar"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_contact_vqu_item_invited_record_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_textMain"
            android:textSize="16sp"
            tools:text="缪贵林" />

        <TextView
            android:id="@+id/tv_contact_vqu_item_invited_record_list_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/color_textDesc"
            android:textSize="12sp"
            tools:text="缪贵林" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:gravity="right"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册时间"
            android:textColor="@color/color_textDesc"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_contact_vqu_item_invited_record_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/color_textDesc"
            android:textSize="10sp"
            tools:text="2021-11-22 12:12:12" />
    </LinearLayout>


    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/color_F5F4F7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</com.mshy.VInterestSpeed.common.ui.view.ShapeConstraintLayout>