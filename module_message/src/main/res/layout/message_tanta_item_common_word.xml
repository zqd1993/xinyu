<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="54dp"
        android:orientation="horizontal"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                android:id="@+id/iv_custom_icon"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:text="自定义"
                android:textColor="@color/color_FF7AC2"
                android:textSize="9sp"
                android:visibility="gone"
                app:stv_layoutRadius="4dp"
                app:stv_strokeColor="@color/color_FF7AC2"
                app:stv_strokeWidth="1dp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_222222"
                android:textSize="14sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                tools:text="看你照片给我一种很文艺的感觉，而且文艺的女生一般都比较浪漫，你是这样的吗" />


        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/resources_tanta_message_ic_next" />
    </LinearLayout>

    <View style="@style/line_f5f4f7" />

</LinearLayout>