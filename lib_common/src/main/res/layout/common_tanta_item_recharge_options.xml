<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_bill_tanta_item_recharge_options_root"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/tanta_selector_recharge_dialog_options"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_vqu_item_bill_recharge_options_num_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_tanta_item_bill_recharge_options_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="@color/color_222222"
                android:textSize="19sp"
                android:textStyle="bold"
                tools:text="420" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="@dimen/dp_size_3"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/bill_recharge_glod" />

            <!--            <TextView-->
            <!--                android:id="@+id/tv_bill_vqu_item_recharge_potions_diamond"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="@string/vqu_diamond"-->
            <!--                android:textColor="@color/vqu_selector_text_options_color"-->
            <!--                android:textSize="11sp" />-->
        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:id="@+id/tv_tanta_item_bill_recharge_options_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginTop="@dimen/dp_size_6"
            android:textColor="@color/color_999999"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_vqu_item_bill_recharge_options_num_parent"
            tools:text="¥6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
        android:id="@+id/tv_tanta_item_bill_recharge_options_sale"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingLeft="9dp"
        android:paddingRight="5dp"
        android:textColor="@color/color_FFFFFF"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:stv_solidColor="@color/color_B4A3FD"
        app:stv_topLeftRadius="@dimen/dp_0"
        app:stv_bottomLeftRadius="6dp"
        app:stv_topRightRadius="6dp"
        app:stv_bottomRightRadius="@dimen/dp_0"
        tools:text="多送300金币"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>