<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@mipmap/bg_notification"
        app:srl_layoutRadius="12dp"
        app:srl_solidColor="@color/white">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:contentDescription="ic_launcher"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@+id/image_view"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vquNoCallName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vquNoCallType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="邀你视频速配"
                android:textColor="@color/white"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/vquNoCallZS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="获得xx金币/分钟"
                android:textColor="@color/color_FBE84C"
                android:textSize="11sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/vqu_voice_callee_cancel_g"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/vqu_voice_callee_answer_g"
            android:src="@mipmap/item_notification_cancel" />

        <ImageView
            android:id="@+id/vqu_voice_callee_answer_g"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:src="@mipmap/item_notification_answer" />
    </RelativeLayout>


</RelativeLayout>