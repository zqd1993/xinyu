<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="88dp"
    android:layout_marginLeft="2.5dp"
    android:layout_marginRight="2.5dp"
    android:layout_height="120.5dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bg_first_recharge_gift" />

    <ImageView
        android:id="@+id/iv_item_first_recharge_grid_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_item_first_recharge_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_A50900"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_item_first_recharge_grid_icon"
        tools:text="金币" />

    <TextView
        android:id="@+id/tv_item_first_recharge_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/color_A50900"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_first_recharge_name"
        tools:text="金币" />


    <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
        android:id="@+id/stv_item_first_recharge_grid_num"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/color_FFFFFF"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:stv_bottomRightRadius="8dp"
        app:stv_endColor="@color/color_FF3800"
        app:stv_orientation="stv_vertical"
        app:stv_startColor="@color/color_FF8A5C"
        app:stv_topLeftRadius="8dp"
        tools:text="5个" />

</androidx.constraintlayout.widget.ConstraintLayout>