<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:sll_layoutRadius="12dp"
            app:sll_solidColor="@color/white">

            <LinearLayout
                android:id="@+id/ll_video"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_tanta_common_call_video" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="视频通话"
                        android:textStyle="bold"
                        android:textColor="@color/color_222222"
                        android:textSize="15sp" />


                    <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                        android:id="@+id/tv_video_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginLeft="4dp"
                        android:gravity="center"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:text="VIP 8.5折中"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        app:stv_layoutRadius="4dp"
                        android:visibility="gone"
                        app:stv_endColor="@color/color_FF7AC2"
                        app:stv_startColor="@color/color_FF7AC2"
                       />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_video_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_video_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/color_999999"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:text="100金币/分钟" />

                    <TextView
                        android:id="@+id/tv_free_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/color_999999"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:text="(免费1分钟)" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_F5F4F7" />

            <LinearLayout
                android:id="@+id/ll_voice"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_tanta_common_call_voice" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="语音通话"
                        android:textStyle="bold"
                        android:textColor="@color/color_222222"
                        android:textSize="15sp" />


                    <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                        android:id="@+id/tv_voice_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginLeft="4dp"
                        android:gravity="center"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:text="VIP 8.5折中"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:visibility="gone"
                        app:stv_layoutRadius="4dp"
                        app:stv_endColor="@color/color_FF7AC2"
                        app:stv_startColor="@color/color_FF7AC2"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_voice_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_voice_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/color_999999"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:text="100金币/分钟" />

                    <TextView
                        android:id="@+id/tv_free_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/color_999999"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:text="(免费1分钟)" />
                </LinearLayout>

            </LinearLayout>


        </com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout>

        <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_999999"
            android:textSize="15sp"
            app:stv_layoutRadius="12dp"
            app:stv_solidColor="@color/white" />
    </LinearLayout>

</RelativeLayout>