<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_input_audio_record"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="231dp">

    <Button
        android:id="@+id/bt_input_audio_record"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/resources_vqu_nim_ic_audio_record" />

    <TextView
        android:id="@+id/tv_record_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bt_input_audio_record"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="按住说话"
        android:textColor="@color/color_A3AABE"
        android:textSize="14sp" />


</RelativeLayout>
