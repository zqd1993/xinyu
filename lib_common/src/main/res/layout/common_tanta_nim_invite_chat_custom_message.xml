<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginEnd="66dp"
        android:background="@drawable/vqu_bg_radius_black_alpha_12"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="13dp"
        android:paddingTop="12dp"
        android:paddingEnd="13dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@mipmap/resources_vqu_nim_bg_fate_bell" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请你视频通话"
                    android:textColor="@color/color_999999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="看看对方，可以更深入的了解对方哦~"
                    android:textColor="@color/color_999999"
                    android:textSize="12sp" />


            </LinearLayout>
        </LinearLayout>

        <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
            android:id="@+id/tv_call"
            android:layout_width="72dp"
            android:layout_height="28dp"
            android:layout_gravity="left"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:text="拨打视频"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:stv_layoutRadius="10dp"
            app:stv_startColor="@color/color_FF7459"
            app:stv_endColor="@color/color_FFB058"/>

    </LinearLayout>
</FrameLayout>