<?xml version="1.0" encoding="utf-8"?>
<com.mshy.VInterestSpeed.common.ui.view.photoDrag.DragRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/rl_drag"
android:layout_width="match_parent"
android:layout_height="match_parent">

<com.mshy.VInterestSpeed.common.ui.view.video.NoClickControlVideo
    android:id="@+id/video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<ImageView
    android:id="@+id/iv_play"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:visibility="gone"
    android:src="@mipmap/ic_tanta_video_play"
    app:layout_constraintBottom_toBottomOf="@+id/video"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@+id/video" />


</com.mshy.VInterestSpeed.common.ui.view.photoDrag.DragRelativeLayout>

