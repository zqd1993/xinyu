<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/tb_bill_vqu_new_withdrawal_account_bar"
        layout="@layout/include_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:text="基本信息"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />

            <com.mshy.VInterestSpeed.common.ui.view.ShapeConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                app:scl_layoutRadius="12dp"
                app:scl_solidColor="@color/color_F5F5F5">

                <TextView
                    android:id="@+id/tv_bill_vqu_new_withdrawal_account_real_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="姓名"
                    android:textColor="@color/color_textMain"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_bill_vqu_new_withdrawal_account_real_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="15dp"
                    android:background="@android:color/transparent"
                    android:gravity="right|center_vertical"
                    android:hint="请输入姓名"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:textColor="@color/color_textMain"
                    android:textColorHint="@color/color_999999"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_bill_vqu_new_withdrawal_account_real_name_txt"
                    app:layout_constraintLeft_toRightOf="@id/tv_bill_vqu_new_withdrawal_account_real_name_txt"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_bill_vqu_new_withdrawal_account_real_name_txt"
                    tools:text="余枫信" />

                <TextView
                    android:id="@+id/tv_bill_vqu_new_withdrawal_account_id_card_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:text="身份证号"
                    android:textColor="@color/color_222222"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_bill_vqu_new_withdrawal_account_real_name_txt" />

                <EditText
                    android:id="@+id/et_bill_vqu_new_withdrawal_account_id_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="15dp"
                    android:background="@android:color/transparent"
                    android:gravity="right|center_vertical"
                    android:hint="请输入身份证"
                    android:maxLength="18"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/color_textMain"
                    android:textColorHint="@color/color_999999"
                    android:textSize="13sp"
                    android:digits="1234567890xX*"
                    app:layout_constraintBottom_toBottomOf="@id/tv_bill_vqu_new_withdrawal_account_id_card_txt"
                    app:layout_constraintLeft_toRightOf="@id/tv_bill_vqu_new_withdrawal_account_id_card_txt"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_bill_vqu_new_withdrawal_account_id_card_txt"
                    tools:text="4127**********6457" />

            </com.mshy.VInterestSpeed.common.ui.view.ShapeConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:text="账号信息"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />

            <com.mshy.VInterestSpeed.common.ui.view.ShapeConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                app:scl_layoutRadius="12dp"
                app:scl_solidColor="@color/color_F5F5F5">


                <TextView
                    android:id="@+id/tv_bill_vqu_new_withdrawal_account_type_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="账号类型"
                    android:textColor="@color/color_222222"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/ll_bill_vqu_new_withdrawal_account_type_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="12dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_bill_vqu_new_withdrawal_account_type_txt"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_bill_vqu_new_withdrawal_account_type_txt">

                    <ImageView
                        android:id="@+id/iv_bill_vqu_new_withdrawal_account_type_img"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        tools:src="@mipmap/ic_common_vqu_pay_dialog_alipay_logo" />

                    <TextView
                        android:id="@+id/tv_bill_vqu_new_withdrawal_account_type_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:drawableRight="@mipmap/ic_arrow_small_right_grey"
                        android:drawablePadding="8dp"
                        android:textColor="@color/color_222222"
                        android:textSize="13sp"
                        tools:text="支付宝" />


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_bill_vqu_new_withdrawal_account_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:text="提现账号"

                    android:textColor="@color/color_textMain"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_bill_vqu_new_withdrawal_account_type_txt" />

                <EditText
                    android:id="@+id/et_bill_vqu_new_withdrawal_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="15dp"
                    android:background="@android:color/transparent"
                    android:gravity="right|center_vertical"
                    android:hint="请输入您的支付宝账号"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:textColor="@color/color_textMain"
                    android:textColorHint="@color/color_999999"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_bill_vqu_new_withdrawal_account_number"
                    app:layout_constraintLeft_toRightOf="@id/tv_bill_vqu_new_withdrawal_account_number"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_bill_vqu_new_withdrawal_account_number" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_bill_vqu_new_withdrawal_account_phone_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/tv_bill_vqu_new_withdrawal_account_number">

                    <TextView
                        android:id="@+id/tv_bill_vqu_new_withdrawal_account_phone_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="30dp"
                        android:text="手机号码"
                        android:textColor="@color/color_textMain"
                        android:textSize="13sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/et_bill_vqu_new_withdrawal_account_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="15dp"
                        android:background="@android:color/transparent"
                        android:gravity="right|center_vertical"
                        android:hint="请输入手机号码"
                        android:inputType="numberSigned"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:singleLine="true"
                        android:textColor="@color/color_222222"
                        android:textColorHint="@color/color_999999"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_bill_vqu_new_withdrawal_account_phone_txt"
                        app:layout_constraintLeft_toRightOf="@id/tv_bill_vqu_new_withdrawal_account_phone_txt"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_bill_vqu_new_withdrawal_account_phone_txt" />


                    <TextView
                        android:id="@+id/tv_bill_vqu_new_withdrawal_account_phone_code_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="27dp"
                        android:text="验证码"
                        android:textColor="@color/color_textMain"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_bill_vqu_new_withdrawal_account_phone_txt" />

                    <EditText
                        android:id="@+id/et_bill_vqu_new_withdrawal_account_auth_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@android:color/transparent"
                        android:gravity="right|center_vertical"
                        android:hint="请输入短信验证码"
                        android:inputType="numberSigned"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:singleLine="true"
                        android:textColor="@color/color_222222"
                        android:textColorHint="@color/color_999999"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_bill_vqu_new_withdrawal_account_phone_code_txt"
                        app:layout_constraintLeft_toRightOf="@id/tv_bill_vqu_new_withdrawal_account_phone_code_txt"
                        app:layout_constraintRight_toLeftOf="@id/stv_bill_vqu_new_withdrawal_account_get_code"
                        app:layout_constraintTop_toTopOf="@id/tv_bill_vqu_new_withdrawal_account_phone_code_txt" />

                    <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                        android:id="@+id/stv_bill_vqu_new_withdrawal_account_get_code"
                        android:layout_width="76dp"
                        android:layout_height="29dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="@string/login_send_auth_code"
                        android:textColor="@color/color_B4A3FD"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_bill_vqu_new_withdrawal_account_phone_code_txt"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_bill_vqu_new_withdrawal_account_phone_code_txt"
                        app:stv_solidColor="@color/color_F5F5F5"
                        app:stv_layoutRadius="15dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.mshy.VInterestSpeed.common.ui.view.ShapeConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="30dp"
                android:text="温馨提示"
                android:textColor="@color/color_273145"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_bill_vqu_new_withdrawal_account_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:lineSpacingMultiplier="1.3"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />

            <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
                android:id="@+id/stv_bill_vqu_new_withdrawal_account_commit"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="128dp"
                android:layout_marginRight="36dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:text="保存"
                android:textStyle="bold"
                android:textColor="@color/color_FFFFFF"
                android:textSize="18sp"
                app:stv_solidColor="@color/color_B4A3FD"
                app:stv_layoutRadius="24dp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>