<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout
        android:id="@+id/sll_vqu_bill_exchange_diamond_money_parent"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:sll_layoutRadius="12dp"
        tools:sll_solidColor="@color/color_F5F5F5"
        app:sll_solidColor="@color/color_F5F5F5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换金额："
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_bill_vqu_exchange_diamond_use_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:digits="0123456789"
            android:hint="请输入要使用的金额"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/color_BBBBBB"
            android:textSize="14sp" />
    </com.mshy.VInterestSpeed.common.ui.view.ShapeLinearLayout>


    <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
        android:id="@+id/tv_bill_vqu_exchange_diamond_get_num"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:text="获得金币：0"
        android:paddingLeft="@dimen/dp_size_16"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:stv_solidColor="@color/color_F5F5F5"
        app:stv_layoutRadius="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sll_vqu_bill_exchange_diamond_money_parent" />

    <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
        android:id="@+id/stv_exchange"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="@string/vqu_bill_exchange_now"
        android:textColor="@color/color_FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:stv_layoutRadius="24dp"
        app:stv_solidColor="@color/color_CCCCCC" />
</androidx.constraintlayout.widget.ConstraintLayout>