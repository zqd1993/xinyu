<?xml version="1.0" encoding="utf-8"?>
<com.mshy.VInterestSpeed.common.ui.view.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="8dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    app:scl_layoutRadius="12dp"
    app:scl_solidColor="@color/color_F5F5F5">

    <ImageView
        android:id="@+id/iv_bill_vqu_item_account_type"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bill_vqu_item_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textColor="@color/color_textMain"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/iv_bill_vqu_item_account_type"
        app:layout_constraintTop_toTopOf="@id/iv_bill_vqu_item_account_type"
        tools:text="姓名：余枫信" />

    <TextView
        android:id="@+id/tv_bill_vqu_item_account_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/color_textMain"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/iv_bill_vqu_item_account_type"
        app:layout_constraintTop_toBottomOf="@id/tv_bill_vqu_item_account_name"
        tools:text="提现账号：13800138000" />

    <TextView
        android:id="@+id/tv_bill_vqu_item_account_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/color_textMain"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/iv_bill_vqu_item_account_type"
        app:layout_constraintTop_toBottomOf="@id/tv_bill_vqu_item_account_id"
        tools:text="手机号：138****8000" />

    <TextView
        android:id="@+id/tv_bill_vqu_item_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/color_222222"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_bill_vqu_item_account_phone"
        app:layout_constraintTop_toBottomOf="@id/tv_bill_vqu_item_account_phone"
        tools:text="账户类型：支付宝" />

    <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
        android:id="@+id/stv_bill_vqu_item_account_edit"
        android:layout_width="58dp"
        android:layout_height="31dp"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:text="编辑"
        android:textColor="@color/color_FFFFFF"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:stv_layoutRadius="24dp"
        app:stv_solidColor="@color/color_B4A3FD"/>

</com.mshy.VInterestSpeed.common.ui.view.ShapeConstraintLayout>