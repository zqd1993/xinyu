<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:background="@mipmap/resources_tanta_home_tv_bg"
    tools:layout_height="56dp">

    <ImageView
        android:id="@+id/vqu_from_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/home_linearlayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vqu_from_iv"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vqu_tv_from_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="4"
                android:maxLines="1"
                android:textColor="@color/color_7A65DA"
                android:textSize="12sp"
                tools:text="Au.痞/程" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:ellipsize="end"
                android:maxEms="3"
                android:maxLines="1"
                android:text="送给"
                android:textColor="@color/color_222222"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/vqu_tv_to_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="4"
                android:maxLines="1"
                android:textColor="@color/color_7A65DA"
                android:textSize="12sp"
                tools:text="佐佐" />

            <TextView
                android:id="@+id/vqu_gift_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:ellipsize="end"
                android:maxLength="6"
                android:maxLines="1"
                android:textColor="@color/color_222222"
                android:textSize="12sp"
                tools:text="2个" />

            <TextView
                android:id="@+id/vqu_gift_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_FE4040"
                android:textSize="12sp"
                tools:text="佐佐佐佐佐" />

            <ImageView
                android:id="@+id/vqu_gift_img"
                android:layout_width="16dp"
                android:layout_height="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="掌声祝福"
                android:textColor="@color/color_222222"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👏🏻👏🏻👏🏻👏🏻"
                android:textColor="@color/color_273145"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/resources_tanta_home_tv_right_bottom_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/vqu_bt_know_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:text="如何上电视"
        android:textColor="@color/color_7A65DA"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:src="@mipmap/resources_tanta_home_tv_more"
        app:layout_constraintBottom_toBottomOf="@id/vqu_bt_know_url"
        app:layout_constraintRight_toLeftOf="@+id/vqu_bt_know_url"
        app:layout_constraintTop_toTopOf="@id/vqu_bt_know_url" />
</androidx.constraintlayout.widget.ConstraintLayout>