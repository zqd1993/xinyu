<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:background="@mipmap/resources_tanta_home_tv_bg"
    tools:layout_height="56dp">

    <ImageView
        android:id="@+id/vqu_from_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/home_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vqu_from_iv"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vqu_tv_from_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="4"
                android:maxLines="1"
                android:textColor="@color/color_FF7AC2"
                android:textSize="12sp"
                tools:text="Au.痞/程" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:ellipsize="end"
                android:maxEms="3"
                android:maxLines="1"
                android:text="送给"
                android:textColor="@color/color_222222"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/vqu_tv_to_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="4"
                android:maxLines="1"
                android:textColor="@color/color_FF7AC2"
                android:textSize="12sp"
                tools:text="佐佐" />

            <TextView
                android:id="@+id/vqu_gift_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:ellipsize="end"
                android:maxLength="6"
                android:maxLines="1"
                android:textColor="@color/color_222222"
                android:textSize="12sp"
                tools:text="2个" />

            <TextView
                android:id="@+id/vqu_gift_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_FF7AC2"
                android:textSize="12sp"
                tools:text="佐佐佐佐佐" />

            <ImageView
                android:id="@+id/vqu_gift_img"
                android:layout_width="16dp"
                android:layout_height="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="一起祝福他们吧..."
                android:textColor="@color/color_222222"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="👏🏻👏🏻👏🏻👏🏻"
                android:textColor="@color/color_273145"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
        android:id="@+id/vqu_bt_know_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="如何上电视"
        android:textColor="@color/color_222222"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_right"
        />

    <ImageView
        android:id="@+id/iv_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/resources_tanta_home_tv_more" />
</androidx.constraintlayout.widget.ConstraintLayout>