<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/tb_auth_vqu_result_bar"
        layout="@layout/include_toolbar" />

    <ImageView
        android:id="@+id/iv_auth_vqu_result_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_auth_vqu_result_bar" />

    <TextView
        android:id="@+id/tv_authentication_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭喜您认证成功"
        android:textColor="@color/color_textMain"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/iv_auth_vqu_result_img"
        app:layout_constraintStart_toStartOf="@id/iv_auth_vqu_result_img"
        app:layout_constraintTop_toBottomOf="@id/iv_auth_vqu_result_img" />

    <TextView
        android:id="@+id/tv_auth_vqu_result_tips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="35dp"
        android:gravity="center"
        android:text="恭喜您已通过真人认证，请开启您的鹊娘交友之旅吧~"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_authentication_status" />


    <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
        android:id="@+id/stv_auth_vqu_result_btn"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="重新填写"
        android:textColor="@color/color_FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:stv_solidColor="@color/color_B4A3FD"
        app:stv_layoutRadius="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>