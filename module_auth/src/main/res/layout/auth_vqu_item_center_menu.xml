<?xml version="1.0" encoding="utf-8"?>
<com.mshy.VInterestSpeed.common.ui.view.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    app:scl_layoutRadius="12dp"
    app:scl_solidColor="@color/color_F5F5F5">

    <ImageView
        android:id="@+id/iv_auth_tanta_item_center_menu_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_auth_vqu_item_center_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textColor="@color/color_222222"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/iv_auth_tanta_item_center_menu_icon"
        app:layout_constraintTop_toTopOf="@id/iv_auth_tanta_item_center_menu_icon"
        tools:text="手机认证" />


    <TextView
        android:id="@+id/tv_auth_vqu_item_center_menu_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textColor="@color/color_999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_auth_tanta_item_center_menu_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_auth_tanta_item_center_menu_icon"
        tools:text="手机认证" />

    <com.mshy.VInterestSpeed.common.ui.view.ShapeTextView
        android:id="@+id/tv_auth_vqu_item_center_menu_status"
        android:layout_width="68dp"
        android:layout_height="32dp"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:text="去认证"
        android:textColor="@color/color_FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:stv_layoutRadius="8dp"
        app:stv_solidColor="@color/color_FF7AC2" />


</com.mshy.VInterestSpeed.common.ui.view.ShapeConstraintLayout>